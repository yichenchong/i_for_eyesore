{
  "manifest_version": 3,
  "name": "I for Eyesore",
  "description": "A browser extension to undo the damage done by the rebranding of Imperial College London.",
  "version": "0.1.0",
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://bb.imperial.ac.uk/*"],
      "js": ["src/blackboard_inject.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://login.microsoftonline.com/*"],
      "js": ["src/msft_login_inject.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://www.imperial.ac.uk/*", "https://imperial.ac.uk/*"],
      "js": ["src/imperial_web_inject.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://www.imperial.ac.uk/*", "https://imperial.ac.uk/*"],
      "css": ["src/imperial_web_inject.css"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://*.office.com/*", "https://outlook.office.com/*"],
      "js": ["src/outlook_inject.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://imperial.cloud.panopto.eu/*"],
      "js": ["src/panopto_inject.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://imperial.cloud.panopto.eu/*"],
      "css": ["src/panopto_inject.css"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [{
    "matches": ["<all_urls>"],
    "resources": ["src/remover.mjs", "src/replacer.mjs", "src/restyler.mjs"]
  }]
}
